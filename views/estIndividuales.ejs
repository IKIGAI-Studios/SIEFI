<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/imgs/imss-logo.png">
    <title>Estadísticas individuales</title>

    <%- include('templates/header')%>

    <%- include('templates/banner')%>
    
    <div class="container mt-1">

        <div class="row space-around">
            <div class="col-lg-4">
                <div class="row justify-content-start align-items-center">
                    <div class="col-2">
                        <img src="/icons/pfp.png" alt="">
                    </div>
                    <div class="col-10">
                        <div class="row"><span class="nombre-usuario" id=""><%= session.user ? session.user.nombre : "Nombre" %></span></div>
                        <div class="row"><span class="nombre-usuario" id=""><%= session.user ? session.user.apellidos : "Apellidos" %></span></div>
                        <div class="row"><p class="tipo-usuario"><%= session.user ? session.user.tipo_usuario : "Administrador" %></p></div>
                    </div>
                    <a href="/logout" class="logout text-danger">CERRAR SESIÓN</a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="d-flex justify-content-center">
                    <div class="col-2"><img src="/icons/hint.png" alt="hint"></div>
                    <div class="col-10"><p class="texto-hint mt-2">ESTADÍSTICAS INDIVIDUALES</p></div>
                </div>
            </div>
        </div>

      <div class="d-flex"> 
          <div class="col-2 sidebar">
              <ul>
                <li class="active">
                  <h5>INFORMACIÓN</h5>
                  <ul class="">
                      <li><a href="/loadInfo" class="sidebar-item">CARGAR INFORMACIÓN</a></li>
                      <li><a href="/registrarAfil" class="sidebar-item">REGISTRAR AFIL</a></li>
                  </ul>
                </li>
                <li class="active mt-3">
                  <h5>ESTADÍSTICAS</h5>
                  <ul class="">
                      <li><a href="/confronta" class="sidebar-item">CONFRONTA</a></li>
                      <li><a href="/estadisticasIndividuales" class="sidebar-item activo">INDIVIDUALES</a></li>
                      <li><a href="#" class="sidebar-item">GLOBALES</a></li>
                  </ul>
                </li>
                <li class="active mt-3">
                  <h5>EJECUTOR</h5>
                  <ul class="">
                      <li><a href="/actualizarEjecutor" class="sidebar-item">ACTUALIZAR</a></li>
                      <li><a href="/registerEjecutor" class="sidebar-item">REGISTRAR</a></li>
                  </ul>
                </li>
              </ul>
          </div>
          <div class="col-10 space-around">
            <div id="perfil" class="contenido activo text-center">

                <form action="actualizarEjecutor" method="post">
                    <div class="container">
                        <label for="nombreEjecutor">Ejecutor</label>
                        <select name="nombreEjecutor" id="nombreEjecutor" class="form-control input-group-text" onchange="ejecutorSeleccionado()">
                            <option value="false">Selecciona un ejecutor</option>
                            <% for(var i=0; i<ejecutores.length; i++) { %>
                                <option value="<%= ejecutores[i].nombre %>">
                                    <%= ejecutores[i].nombre %>
                                </option>
                                <% } %>
                        </select>
                        <div class="container mt-2">
                            <input class="form-check-input mt-0" type="radio" id="ordenarIMP" name="opcion">
                            <label for="option1">Ordenar por IMP</label>
                            <input class="form-check-input mt-0" type="radio" id="ordenarOportunidad" name="opcion">
                            <label for="option2">Ordenar por oportunidad</label>
                        </div>
                        <div id="div-tabla-estadisticas-individuales"></div>
                    </div>
                </form>
            </div>
          </div>  
      </div>
    </div>


</body>
<script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
<script src="socket.io/socket.io.min.js"></script>
<script src="/js/estIndividuales.js"></script>

</html>

